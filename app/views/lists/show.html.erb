<div class="hide-box-guide"></div>
<h1 class="guide-header">action plan</h1>

<div class="todo">

  <div class="reading-list list-div">
    <div class="left-card">
      <%= image_tag "illustration_nine.png", height: "250", class: "guide-img" %>
    </div>
    <div class="todo-card">
      <h5 class="headline-guide">my reading list</h5>
      <ul class="reading-todo">
        <div class="list">
          <% @reading_todos.each do |todo| %>
            <div class="todo-hover">
              <div class="dlt-btn-div">
                <div class="list-item">
                  <input class="form-check-input position-static mr-3" type="checkbox" id="blankCheckbox" value="option1" aria-label="...">
                  <li><strong><%= todo.title %></strong></li>
                </div>
                <div class="hide">
                  <%= link_to "", { action: "destroy", id: todo.id, list_id: @list.id, controller: "todos" }, method: :delete, data: { confirm: "Are you sure?" }, class: "dlt-btn fas fa-minus-circle ml-3" %>
                </div>
              </div>
              <li class="guide-description"><%= todo.description %></li>
            </div>
          <% end %>
        </div>
      </ul>
      <div class="btn todo-btn ">
        Add task
       </div>
    </div>
  </div>

  <div class="edu-list list-div my-5">
    <div class="todo-card left-card-2">
      <h5 class="headline-guide">education & practice</h5>
      <ul class="edu-todos">
        <div class="list">
          <% @education_todos.each do |todo| %>
          <div class="todo-hover">
            <div class="list-item">
              <input class="form-check-input position-static mr-3" type="checkbox" id="blankCheckbox" value="option1" aria-label="...">
              <li><%= todo.title %></li>
              <div class="hide">
                <%= link_to "", { action: "destroy", id: todo.id, list_id: @list.id, controller: "todos" }, method: :delete, data: { confirm: "Are you sure?" }, class: "dlt-btn fas fa-minus-circle ml-3" %>
              </div>
            </div>
           </div>
          <% end %>
        </div>
      </ul>
    </div>
    <div>
      <%= image_tag "illustration_two.png", height: "250", class: "guide-img"%>
    </div>
  </div>

  <div class="online-list list-div">
    <div class="left-card-3">
      <%= image_tag "illustration_five.png", height: "250", class: "guide-img" %>
    </div>
    <div class="todo-card third-img">
      <h5 class="headline-guide">online content</h5>
      <ul>
        <div class="list">
          <% @online_content_todos.each do |todo| %>
          <div class="todo-hover">
            <div class="list-item">
              <input class="form-check-input position-static mr-3" type="checkbox" id="blankCheckbox" value="option1" aria-label="...">
              <li><%= todo.title %></li>
              <div class="hide">
                  <%= link_to "", { action: "destroy", id: todo.id, list_id: @list.id, controller: "todos" }, method: :delete, data: { confirm: "Are you sure?" }, class: "dlt-btn fas fa-minus-circle ml-3" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
  <div class="form-container">
    <div class="form-pop">
      <%= simple_form_for([@list, @todo]) do |f| %>
      <%= f.input :category, collection: Todo.categories %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.submit 'Create' %>
      </div>
  </div>
  <% end %>

</div>

